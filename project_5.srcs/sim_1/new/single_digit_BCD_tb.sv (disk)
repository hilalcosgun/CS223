    d[3] = 1; #10;
    d[2] = 1; d[3] = 0; #10;
    d[3] = 1; #10;
    enable = 0; load = 0; d[0] = 0; d[1] = 0; d[2] = 0; d[3] = 0; #10;
    d[3] = 1; #10;
    d[2] = 1; d[3] = 0; #10;
